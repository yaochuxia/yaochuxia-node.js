@import('reset.styl')
global-reset()

.wp
    width:1160px
    margin:0 auto
.cl
    clear:both    

header
    height:100px
    background:#ECECEC
    h1
        text-align:center
        line-height:100px
        font-size:16px
        font-weight:bold
        border:1px solid #ccc
        
.pic_list
    margin: 0 auto
    padding:0 0 10px 0 
    ul
        li
            float:left
            width:22%
            text-align:center
            margin:20px 10px 0 10px
            padding:5px
            border:2px solid #efefef
            background:#fff
            position:relative;
            -webkit-box-shadow:0 4px 20px rgba(0,0,0,0.27),0 0 60px rgba(0,0,0,0.1) inset
            -moz-box-shadow:0 4px 20px rgba(0,0,0,0.27),0 0 60px rgba(0,0,0,0.1) inset
            box-shadow:0 4px 20px rgba(0,0,0,0.27),0 0 60px rgba(0,0,0,0.1) inset
            i
                display:block
                overflow:hidden
                height:196px               
                img
                    width:100%
                    height:198px
            span
                display:block
                background:#EBEBEB
                padding: 8px 5px
         :before
             position:absolute
             content:''
             width:90%
             height:80%
             left:13px
             bottom:8px
             background:transparent
             -webkit-box-shadow:0 8px 20px rgba(0,0,0,0.6)
             box-shadow:0 8px 20px rgba(0,0,0,0.6)
             -webkit-transform:skew(-12deg) rotate(-4deg)
             transform:skew(-12deg) rotate(-4deg)
             z-index:-2 
         :after
             position:absolute
             content:''
             width:90%
             height:80%
             right:13px
             bottom:8px
             background:transparent
             -webkit-box-shadow:0 8px 20px rgba(0,0,0,0.6)
             box-shadow:0 8px 20px rgba(0,0,0,0.6)
             -webkit-transform:skew(12deg) rotate(4deg)
             transform:skew(12deg) rotate(4deg)
             z-index:-2 
               
      